#!/usr/bin/perl -w

package Morales;

$elizabeth = "alumna";

sub terminate {
  my $name = shift;
  print "$elizabeth es una ${name} lo sentimos\n";
}

terminate("danielo");

package main;

#El paquete es Morales la varible elizabeth es la alumna.
#shift saca ese elemento incluyendolo.

