c++:
#include <iostream>

using namespace std;

int main()
{
                                                                                                                                     
    for ( int i = 0; i<=5; i++)  cout << i << endl;
    for( int i = 5; i>=0; i--)  cout << i << endl;
 
   return 0;
}



java:
public class HelloWorld{

     public static void main(String []args){
         for ( int i = 0; i<=5; i++)  System.out.println(i);
         for(  int i = 5; i>=0; i--)  System.out.println(i);
        System.out.println("Hello World");
     }
}


c#: 
using System.IO;
using System;

class Program
{
    static void Main()
    {
      for ( int i = 0; i<=5; i++)  Console.Write(i); // 0 1 2 3 4 5 
      Console.WriteLine("");
      for ( int i = 5; i>=0; i--)  Console.Write(i); // 5 4 3 2 1 0
    }
}

######################################################################## 7 
################ 7.a
#include <iostream>

using namespace std;

void StaticArray()
{
     int x[1];
     cout<<x[1]<<endl;
}



void StackArray()
{
    double *n = new double[4200];
    n[0]= 6;
    cout<<(*n)<<endl;
    delete[] n;
}



void HeapArray()
{
   string fruit[] = {"Apple", "Orange", "Banana"};
   string *stuff = new string[3];
   stuff[0] = "Apple";
   stuff[1] = "Orange";
   stuff[2] = "Banana";
   cout << sizeof(fruit) << endl;
   cout << sizeof(stuff) << endl;
   delete [] stuff;    
}

int main()
{
   StaticArray();
   StackArray();          
   HeapArray();
   return 0;
}


#############7.b
#include <stdio.h>

////c
void StaticArray()
{
     int x[1];

    printf("\n [%s]\n", x[1]);

}



void StackArray()
{
    char * ptr1 = "Ahora";
    char* n[4];
    n[0]=ptr1;
   
    
    printf("\n [%s]\n", n[0]); 
}



void HeapArray()
{
   const char *strings[] = {"Apple", "Orange", "Banana"}; 
  
    printf("%s\n", strings[1]);
   
 
}

int main()
{
   StaticArray();
   StackArray();          
   HeapArray();
   return 0;
}





