######################################################### 4 
def hypotenuse(a, b):
	return math.sqrt(a ** 2.0 + b ** 2.0)
    
def secondFunction():
	return hypotenuse(1, 2)

def thirdFunction(a, b):
	return secondFunction()+ 4


